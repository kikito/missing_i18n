body {
  margin: 0
}

.col {
  top:      0;
  bottom:   0;
}

.left {
  overflow-y: auto;
  width:      400px;
  position:   absolute;
}

.right {
  left:     400px;
  right:    0;
  position: fixed;
}

iframe {
  width:      100%;
  height:     100%;
  position:   absolute;
  border:     solid 1px #ccc;
  border-top: none;
}

h1 {
  padding-right: 10px;
  padding-left:  5px;
}

.missing-translations .active,
.missing-translations .active:hover td {
  background: #ccc;
}

.missing-translations tr {
  cursor: pointer;
}

[class^="icon-"], [class*=" icon-"] {
  background-image: url(<%=asset_path "glyphicons-halflings.png"%>);
}

.icon-white {
  background-image: url(<%=asset_path "glyphicons-halflings-white.png"%>);
}
