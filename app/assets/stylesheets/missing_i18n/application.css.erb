body {
  height: 100%;
}

iframe {
  min-height: 95%;
  width: 100%;
  border:     none;
}

.locales li {
  list-style-type: none;
}

.locales .active,
.locales .active:hover {
  background: #ccc;
}

.locales li {
  cursor: pointer;
}

[class^="icon-"], [class*=" icon-"] {
  background-image: url(<%=asset_path "glyphicons-halflings.png"%>);
}

.icon-white {
  background-image: url(<%=asset_path "glyphicons-halflings-white.png"%>);
}
